{
  "name": "@10up/toolkit",
  "private": true,
  "author": {
    "name": "10up",
    "email": "info@10up.com",
    "url": "https://10up.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/10up/10up-scripts.git"
  },
  "scripts": {
    "build": "npm run build --workspaces --if-present",
